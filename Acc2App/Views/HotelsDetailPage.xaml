<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:Acc2App.ViewModels"
			 x:Class="Acc2App.Views.HotelsDetailPage"
			 x:DataType="vm:HotelsDetailViewModel">
	<ScrollView>
		<VerticalStackLayout Margin="12">
			<Label Text="{Binding Item.Title}" FontSize="Header" />
			<Label Text="{Binding Item.Description}" FontSize="Default" />
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
